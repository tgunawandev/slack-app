{
  "name": "slack-app",
  "version": "1.0.0",
  "description": "A Slack application with workspace administration",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "ts-node src/index.ts",
    "test": "jest",
    "lint": "eslint src/**/*.ts",
    "admin:sync": "ts-node src/admin/sync.ts",
    "admin:cli": "ts-node src/admin/cli.ts",
    "admin:validate": "ts-node src/admin/cli.ts validate",
    "manifest:validate": "npx @slack/cli manifest validate --manifest manifest.yaml"
  },
  "keywords": [
    "slack",
    "bot",
    "automation",
    "admin"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@slack/bolt": "^3.17.0",
    "@slack/web-api": "^6.11.0",
    "dotenv": "^16.3.1",
    "js-yaml": "^4.1.0"
  },
  "devDependencies": {
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^20.10.0",
    "typescript": "^5.3.0",
    "ts-node": "^10.9.2",
    "jest": "^29.7.0",
    "@types/jest": "^29.5.11",
    "eslint": "^8.55.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0"
  }
}
